<div class="form-group">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-company">{{entry_company}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="company" value="{{company}}" placeholder="{{entry_company}}" id="input-company" class="form-control" />
  </div>
</div>
{% if entry_website %}
<div class="form-group">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-website">{{entry_website}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="website" value="{{website}}" placeholder="{{entry_website}}" id="input-website" class="form-control" />
  </div>
</div>
{% endif %}
<div class="form-group required">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-address-1">{{entry_address_1}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="address_1" value="{{address_1}}" placeholder="{{entry_address_1}}" id="input-address-1" class="form-control" />
    {% if error_address_1 %}
    <div class="text-danger">{{error_address_1}}</div>
    {% endif %}
  </div>
</div>
<div class="form-group">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-address-2">{{entry_address_2}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="address_2" value="{{address_2}}" placeholder="{{entry_address_2}}" id="input-address-2" class="form-control" />
  </div>
</div>
<div class="form-group required">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-city">{{entry_city}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="city" value="{{city}}" placeholder="{{entry_city}}" id="input-city" class="form-control" />
    {% if error_city %}
    <div class="text-danger">{{error_city}}</div>
    {% endif %}
  </div>
</div>
<div class="form-group required">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-postcode">{{entry_postcode}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <input type="text" name="postcode" value="{{postcode}}" placeholder="{{entry_postcode}}" id="input-postcode" class="form-control" />
    {% if error_postcode %}
    <div class="text-danger">{{error_postcode}}</div>
    {% endif %}
  </div>
</div>
<div class="form-group required">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-country">{{entry_country}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <select name="country_id" id="input-country" class="form-control">
      <option value="">{{text_select}}</option>
      {% for country in countries %}
        <option value="{{country.country_id}}" {% if country.country_id == country_id %}selected="selected"{% endif %}>{{country.name}}</option>
      {% endfor %}
    </select>
    {% if error_country %}
    <div class="text-danger">{{error_country}}</div>
    {% endif %}
  </div>
</div>
<div class="form-group required">
  <label class="{% if form %}col-sm-2{% endif %} control-label" for="input-zone">{{entry_zone}}</label>
  <div class="{% if form %}col-sm-10{% endif %}">
    <select name="zone_id" id="input-zone" class="form-control">
    </select>
    {% if error_zone %}
    <div class="text-danger">{{error_zone}}</div>
    {% endif %}
  </div>
</div>
